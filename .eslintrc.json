{
  "extends": ["prettier", "airbnb-base"],
  "env": {
    "node": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error", {
        "singleQuote": true
      }
    ],
    "no-unused-vars": [
      "error", {
        "argsIgnorePattern": "next"
      }
    ],
    "no-use-before-define": [
      "error", {
        "functions": false
      }
    ],
    "no-console": [
      "error", {
        "allow": ["warn", "error"]
      }
    ]
  }
}